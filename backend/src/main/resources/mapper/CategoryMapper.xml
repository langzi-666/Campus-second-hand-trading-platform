<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.campus.trade.mapper.CategoryMapper">
    
    <!-- 结果映射 -->
    <resultMap id="BaseResultMap" type="com.campus.trade.entity.Category">
        <id column="id" property="id" />
        <result column="name" property="name" />
        <result column="parent_id" property="parentId" />
        <result column="icon" property="icon" />
        <result column="sort_order" property="sortOrder" />
        <result column="status" property="status" />
        <result column="created_at" property="createdAt" />
        <result column="updated_at" property="updatedAt" />
    </resultMap>
    
    <!-- 获取所有启用的分类 -->
    <select id="selectActiveCategories" resultMap="BaseResultMap">
        SELECT * FROM categories 
        WHERE status = 1 
        ORDER BY sort_order ASC, id ASC
    </select>
    
    <!-- 根据父分类ID获取子分类 -->
    <select id="selectByParentId" resultMap="BaseResultMap">
        SELECT * FROM categories 
        WHERE parent_id = #{parentId} AND status = 1 
        ORDER BY sort_order ASC, id ASC
    </select>
    
</mapper>
